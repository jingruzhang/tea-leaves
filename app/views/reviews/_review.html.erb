<% if !review.nil? %>
    <a href="/teas/<%=review.tea.id%>/reviews/<%= review.id %>" class="list-group-item">
        <h4 class="list-group-item-heading"><%= review.tea.name %></h4>
        <p class="list-group-item-text"><%= review.content %></p>
        <p class="list-group-item-text">-- <%= review.user.name%></p>
    </a>
<% end %>

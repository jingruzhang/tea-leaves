<%= form_for [@type, @tea] do |f| %>

    <%= f.hidden_field :type_id, value: @type.id %>

    <div class="field"> <%= f.label :name %><br>
    <%= f.text_field :name %></div>

    <div class="field"> <%= f.label :origin %><br>
    <%= f.text_field :origin %></div>

    <div class="field"><%= f.label :profile, "About this tea: " %><br>
    <%= f.text_area :profile, size: "80x10"%></div>

    <div class="field"><%= f.label :instruction, "How to brew this tea? " %><br>
    <%= f.text_area :instruction, size: "80x10" %></div><br>

    <div class="actions"><%= f.submit 'Submit', :class => 'btn btn-primary' %></div>

<% end %>

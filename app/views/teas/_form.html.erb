<%= form_for [@type, @tea] do |f| %>

    <%= f.hidden_field :type_id, value: @type.id %>

    <div class="field"> <%= f.label :name %><br>
    <%= f.text_field :name %></div>

    <div class="field"> <%= f.label :origin %><br>
    <%= f.text_field :origin %></div>

    <div class="field"><%= f.label :profile, "Flavor & Aroma: " %><br>
    <%= f.text_area :profile, size: "100x5"%></div>

    <div class="field"><%= f.label :instruction, "How to brew this tea? " %><br>
    <%= f.text_area :instruction, size: "100x5" %></div><br>

    <div class="field"><%= f.fields_for :reviews, @tea.reviews.build do |ff| %>
        <div>
            <%= ff.label :content, "Review Content" %> <br>
            <%= ff.text_area :content, size: "80x5" %>
            <%= ff.hidden_field :user_id, value: current_user.id %>
        </div>
    <% end %>
    </div>

    <div class="actions"><%= f.submit 'Submit', :class => 'btn btn-primary' %></div>

<% end %>

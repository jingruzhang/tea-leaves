<%= form_tag(result_path, :method => 'get') do %>

    <div class="field">
        <%= label_tag :search %><br>
    </div>

    <div class="field">
       <%= text_field_tag :search, params[:search], placeholder: "Search Tea" %>
    </div><br>

    <div class="actions"><%= submit_tag 'Submit', :class => 'btn btn-primary'%></div>

<% end %>
